@page "/"
@using Microsoft.AspNetCore.Components.Server
@using Temple.Net.Models
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Домашняя страница</PageTitle>

Домашняя страница

<style>
    footer {
        position: absolute;
    }
</style>


@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "obj")]
    public string? Object { get; set; }

    [Parameter]
    [SupplyParameterFromQuery(Name = "show")]
    public bool? IsShowSnack { get; set; }

    protected override void OnInitialized()
    {
        if (IsShowSnack == true)
        {
            switch (Object)
            {
                case "храм":
                    Snackbar.Add("Храм добавлен", Severity.Info);
                    break;
                    case "персоналии":
                    Snackbar.Add("Персоналия добавлена", Severity.Info);
                    break;
                case "прихожане":
                    Snackbar.Add("Прихожанин добавлен", Severity.Info);
                    break;
            }
        }
    }
}
