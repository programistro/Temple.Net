@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "obj")]
    public string? Object { get; set; }

    [Parameter]
    [SupplyParameterFromQuery(Name="show")]
    public bool? IsShowSnack { get; set; }

    private Temple temple = new();

    protected override void OnInitialized()
    {
        if (IsShowSnack == true)
        {
            switch (Object)
            {
                case "храм":
                    Snackbar.Add("Храм добавлен", Severity.Info);
                    break;
                    case "персоналии":
                    Snackbar.Add("Персоналия добавлена", Severity.Info);
                    break;
                case "прихожане":
                    Snackbar.Add("Прихожанин добавлен", Severity.Info);
                    break;
            }
        }
    }
