@inject IConfiguration config
@inject IJSRuntime JSRuntime
@page "/map"
@inject AppDbContext _context
@rendermode InteractiveServer

<style>
    footer {
        position: absolute;
    }
</style>

<div id="map" style="height: 400px; width: 100%;"></div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initMap");
            await JSRuntime.InvokeVoidAsync("console.log", "Hello, world!");
            await JSRuntime.InvokeVoidAsync("disableClickHandler");
            foreach (var temple in _context.Temples)
            {
                if (temple.Lng != 0 || temple.Lat != 0)
                {
                    await JSRuntime.InvokeVoidAsync("addMarker", temple.Lat, temple.Lng);
                }
            }
        }
    }
}